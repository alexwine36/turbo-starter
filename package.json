{
  "name": "turbo-starter",
  "version": "1.0.0",

  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "ultracite lint",
    "lint:ci": "biome check --diagnostic-level=error",
    "format": "ultracite format",
    "test": "turbo test",
    "analyze": "turbo analyze",
    "bump-deps": "npx npm-check-updates --deep -u -x react-day-picker && pnpm install",
    "ui:update": "shadcn add --all --overwrite -c packages/design-system",
    "ui:add": "shadcn add -c packages/design-system",
    "migrate": "cd packages/database && npx prisma format && npx prisma generate && npx prisma db push",
    "clean": "pnpm clean:modules && pnpm clean:main",
    "clean:modules": "turbo clean",
    "clean:main": "git clean -xdf .turbo node_modules",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "db:up": "docker compose up -d",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@auto-it/first-time-contributor": "^11.3.0",
    "@biomejs/biome": "1.9.4",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^2.3.3",
    "mintlify": "^4.0.319",
    "shadcn": "2.1.6",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "ultracite": "^4.1.14"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.15.2",
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.0.0"
  }
}
